<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ijustyce.safe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".txApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/txTheme3" >
        <activity
            android:icon="@drawable/ic_launcher"
            android:name="com.ijustyce.safe.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feedback" />
        <activity android:name=".Help" />
        <activity android:name=".settings" />
        <activity android:name=".Tools" />
        <activity android:name=".Locker" />
        <activity android:name=".Password" />
        <activity android:name=".health" />

        <service android:name=".txServices" />

        <!-- 短信部分 -->
        <activity android:name="com.ijustyce.sms.MainActivity" />
        <activity android:name="com.ijustyce.sms.about" />
        <activity
            android:name="com.ijustyce.sms.show"
            android:label="@string/newmessage"
            android:theme="@style/dialogTheme" >
        </activity>

        <service android:name="com.ijustyce.sms.MessageActivity" />
        <service android:name="com.ijustyce.sms.dealmsg" />

        <activity
            android:name="com.ijustyce.sms.read"
            android:screenOrientation="portrait" />
        <activity android:name="com.ijustyce.sms.settings" />
        <activity android:name="com.ijustyce.sms.intercept" />
        <activity android:name="com.ijustyce.sms.conversation" />
        <activity android:name="com.ijustyce.sms.timingList" />
        <activity android:name="com.ijustyce.sms.advance" />
        <activity android:name="com.ijustyce.sms.backup" />
        <activity android:name="com.ijustyce.sms.feedback" />
        <activity
            android:name="com.ijustyce.sms.sendsms"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android-dir/mms-sms" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.ijustyce.sms.SmsActivity"
            android:enabled="true" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.ijustyce.sms.Timing"
            android:enabled="true" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.tx.sms.timing" />
            </intent-filter>
        </receiver>
        <!-- 短信部分结束 -->
        
        <!-- 拦截部分 -->
        
        <activity android:name="com.ijustyce.intercept.MainActivity" />
         <receiver
            android:name="com.ijustyce.intercept.recevicer"
            android:enabled="true" >
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <service android:name="com.ijustyce.intercept.service"/>

        <activity android:name="com.ijustyce.intercept.setting"/>
        <activity android:name="com.ijustyce.intercept.black"/>
        <activity android:name="com.ijustyce.intercept.white"/>
        <activity android:name="com.ijustyce.intercept.help"/>
        <activity android:name="com.ijustyce.intercept.advance"/>
        <activity android:name="com.ijustyce.intercept.history"/>
        <activity android:name="com.ijustyce.intercept.feedback" />
        <!-- 拦截部分结束 -->
    </application>

</manifest>